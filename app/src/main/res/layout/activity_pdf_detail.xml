<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".PdfDetailActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:id="@+id/toolBarRL4_ID"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <!--Back button-->
        <ImageButton
            android:id="@+id/backIBtn5_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_white"/>

        <!--Title toolbar-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Book details"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </RelativeLayout>

    <!--All contents inside the scroll view-->
    <ScrollView
        android:layout_above="@id/readBookBtn_ID"
        android:layout_below="@id/toolBarRL4_ID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Book info-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Book preview-->
                <RelativeLayout
                    android:id="@+id/pdfRL1_ID"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/gray02">

                    <com.github.barteksc.pdfviewer.PDFView
                        android:id="@+id/pdfView1_ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <!--Progress-->
                    <ProgressBar
                        android:id="@+id/progressBar1_ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <!--Book title-->
                <TextView
                    android:id="@+id/titleTV3_ID"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pdfRL1_ID"
                    android:text="Book title"
                    android:textColor="@color/white"/>

                <!--Table-->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleTV3_ID"
                    android:layout_toEndOf="@id/pdfRL1_ID">

                    <!--Category row-->
                    <TableRow>

                        <TextView
                            android:id="@+id/categoryLabelTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Category"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/categoryTV3_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:textColor="@color/white"/>

                    </TableRow>

                    <!--Date row-->
                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/dateLabelTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Date"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/dateTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:textColor="@color/white"/>

                    </TableRow>

                    <!--Size row-->
                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/sizeLabelTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Size"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/sizeTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:textColor="@color/white"/>

                    </TableRow>

                    <!--View count row-->
                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/viewsLabelTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Views"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/viewsTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:textColor="@color/white"/>

                    </TableRow>

                    <!--Download count row-->
                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/downloadLabelTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Downloads"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/downloadTV_ID"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:textColor="@color/white"/>

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <!--Book description-->
            <TextView
                android:id="@+id/descriptionTV2_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Book's description"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

    <!--Read book button-->
    <Button
        android:id="@+id/readBookBtn_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_book_white"
        android:text="Read"
        android:background="@color/design_default_color_primary"/>

</RelativeLayout>