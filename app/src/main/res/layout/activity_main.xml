<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:padding="20dp"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/iconImageViewID"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconImageViewID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nexa_trial_black"
        android:text="Welcome to Book App"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <android.widget.Button
        android:id="@+id/loginBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/skipBtnID"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="@font/nexa_trial_heavy"
        android:text="Login"
        android:textColor="@color/white" />

    <android.widget.Button
        android:id="@+id/skipBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shape_button02"
        android:fontFamily="@font/nexa_trial_heavy"
        android:text="Continue without login"
        android:textColor="@color/white" />

</RelativeLayout>